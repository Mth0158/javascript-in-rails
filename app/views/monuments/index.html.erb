<p style="color: green"><%= notice %></p>

<h1>Monuments</h1>

<div data-controller="insert-in-list">
  <div id="monuments" data-insert-in-list-target="items">
    <% @monuments.each do |monument| %>
      <%= render monument %>
      <p>
        <%= link_to "Show this monument", monument %>
      </p>
    <% end %>
  </div>

  <div data-controller="toggle">
    <%= link_to "New monument",
                new_monument_path,
                class: "btn btn-primary",
                data: { action: "click->toggle#fire" } %>

    <div data-toggle-target="form" class="d-none">
      <%= render "form", monument: @monument %>
    </div>
  </div>

  <p>Adieu</p>
</div>
